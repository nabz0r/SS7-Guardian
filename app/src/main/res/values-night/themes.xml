<?xml version="1.0" encoding="utf-8"?>
<!--
  SS7 Guardian - Dark Theme
  ==========================
  Night mode variant with darker colors for OLED screens
  and better visibility in low-light conditions.
-->
<resources>
    <style name="Theme.SS7Guardian" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Dark background and surface -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Error color -->
        <item name="colorError">@color/status_high</item>
        <item name="colorOnError">#FFFFFF</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
    </style>
</resources>